<%- include('../template/head')-%>
<body class="text-center">
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <%- include('../template/nav')-%>
  <main role="main" class="inner cover">
    <h1 class="mt-lg-5 cover-heading">Registrar Usu√°rio</h1>
    <hr class="mt-3">

    <form method="POST" action="/api/users/register" class="row">
      <div class="form-group col-md-12 text-center">
        <label for="username">Username</label>
        <input type="text" class="form-control-sm w-25 ml-2" name="username" id="username" placeholder="username">
      </div>
      <div class="form-group col-md-12 text-center">
        <label for="password">Password</label>
        <input type="password" class="form-control-sm w-25 ml-2" name="password" id="password" placeholder="Password">
      </div>
      <div class="form-group col-md-12 text-center">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" class="form-control-sm w-25" name="confirmPassword" id="confirmPassword" placeholder="Password">
      </div>
      <button type="submit" class="flex btn-lg btn-dark col-md-2 mt-md-4 m-auto">Submit</button>
    </form>
  </main>
  <%- include('../template/footer')-%>
</div>
</body>

